<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "Nombre", require: true %>
  </div>
  <div class="field">
    <%= f.label :Apellido %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Apellido" %>
  </div>
  <div class="field">
    <%= f.label :RUT %><br />
    <%= f.number_field :rut, autofocus: true, autocomplete: "11111111" %>
  </div>
  <div class="field">
    <%= f.label :DV %><br />
    <%= f.text_field :dv, autofocus: true, autocomplete: "k", maxlength: 1%>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :Password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> m√≠nimo de caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", require: true %>
  </div>

  <div class="field">
    <%= f.label :Password_Confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", require: true%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
